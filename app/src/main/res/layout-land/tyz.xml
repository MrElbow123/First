<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Teams"
        android:textColor="#0F5E93"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="reset"
        android:text="RESET"
        app:backgroundTint="@color/pink"
        app:iconTint="@color/pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.914" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="378dp"
        android:layout_height="314dp"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/a"
            android:layout_width="195dp"
            android:layout_height="258dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:orientation="vertical"

            android:visibility="visible">


            <TextView
                android:id="@+id/input_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TeamA"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="40dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btn_dollar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif-medium"
                android:onClick="add3"
                android:text="+3"
                android:textColor="#FFFFFF"
                app:backgroundTint="#E854B3" />         <!--onclick就是调用void方法-->

            <Button
                android:id="@+id/btn_euro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="add2"
                android:text="+2"
                app:backgroundTint="#E854B3" />

            <Button
                android:id="@+id/btn_won"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="add1"
                android:text="+1"
                app:backgroundTint="@color/pink" />


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:layout_width="5dp"
            android:layout_height="322dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="178dp"
            android:layout_height="259dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:orientation="vertical"

            android:visibility="visible">


            <TextView
                android:id="@+id/textViewB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TeamB"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/showb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="40dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/bb3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="sans-serif-medium"
                android:onClick="addb3"
                android:text="+3"
                app:backgroundTint="@color/pink" />

            <Button
                android:id="@+id/bb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="addb2"
                android:text="+2"
                app:backgroundTint="@color/pink" />

            <Button
                android:id="@+id/bb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:onClick="addb1"
                android:text="+1"
                app:backgroundTint="@color/pink" />


        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>